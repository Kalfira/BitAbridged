@using System.Web.Optimization
<!DOCTYPE html>
<html ng-app="BitAbridged">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Bit Abridged</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <base href="/" />
</head>
<body>
    <div id="container">
        <div id="header-container">
            <div class="navbar navbar-inverse navbar-fixed-top" style="position: fixed;">
                <div class="container" ng-controller="HeaderController">
                    <div class="navbar-header" style="position: fixed">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a href="~" class="navbar-brand" style="color: white;">Bit[<span style="color:#4CC0A4">Abridged</span>]</a>
                        <div style="float: left;" ng-hide="!vm.loaded">
                            <input ng-model="query" placeholder="Quick Search..." style="margin-top: 10px;">
                            <ul>
                                <li ng-repeat="item in filteredItems = (vm.languages | SearchFilter:query)" ng-hide="!filteredItems.length" style="background: white; list-style: none; position: relative; right: 40px; width: 137px; border: 1px solid black;" ng-click="vm.clear()" class="search-result" title="{{item.Use}}">
                                    <a ui-sref="{{item.Url}}" style="display: flex; justify-content: center; align-items: center;">{{item.Name}}</a>

                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav" style="float: right;">
                            <li ng-mouseover="mouseOver = false" ng-mouseleave="mouseOver = true;" >
                                <div style="position: static;">
                                    <a ui-sref="languages" style="background-color: #222222; float: right; color:#999999; display: block; padding-top: 15px; line-height: 20px;">Languages</a>
                                    <div ng-hide="mouseOver" style="position: absolute; padding-top: 40px; ">
                                        <div ng-repeat="item in vm.languages" style="background: white; list-style: none; position: relative; width: 137px; border: 1px solid black;" title="{{item.Use}}">
                                            <a ui-sref="{{item.Url}}" style="display: flex; justify-content: center; align-items: center; clear: both;">{{item.Name}}</a>
                                        </div>
                                    </div>
                                </div>

                            </li>
                            <li ng-hide="!vm.isLoggedIn()"><a ng-click="vm.logout()">Logout</a></li>
                            <li ng-hide="vm.isLoggedIn()"><a ui-sref="login">Login</a></li>
                        </ul>
                    </div>

